<Window x:Class="HPAFM_Control_1.ServiceCamera"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HPAFM_Control_1"
        mc:Ignorable="d"
        Title="ControlCamera" Height="200" Width="200"
        x:Name="CamWin"
        Closing="Window_Closing">
    <DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom">
            <Button Content="Start Cam" Name="StartCam" Width="75" Click="StartCam_Click"/>
            <CheckBox Content="Slow Mode" Name="SlowCheck" Margin="3,3"/>
        </StackPanel>

        <WindowsFormsHost x:Name="WFHost"/>
    </DockPanel>
</Window>
