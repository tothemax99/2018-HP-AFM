<Page x:Class="HPAFM_Control_1.ControlAutomation"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HPAFM_Control_1"
      mc:Ignorable="d" 
      d:DesignHeight="160" d:DesignWidth="200"
      Title="AutomationController">

    <GroupBox Header="Manual" Width="200" Name="FDManualControls">
        <StackPanel Orientation="Vertical">
            <Button Content="FD Normal Apporach" Click="ApproachSlow_Click"/>
            <Button Content="FD Fast Approach" Click="ApproachFast_Click"/>
            <Button Content="Go to sample loc"/>
            <Button Content="Set conditions"/>
            <TextBlock Height="50" TextWrapping="Wrap" Name="AutomationStatusText">
                Current Action: None
            </TextBlock>
        </StackPanel>
    </GroupBox>
</Page>
